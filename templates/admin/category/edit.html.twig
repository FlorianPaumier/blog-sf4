{% extends 'admin/layout.html.twig' %}

{% block body_id '' %}

{% block main %}
    <h1>{{ 'category'|trans({'%id%': category.id}) }}</h1>

    {{ include('admin/category/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_category_show', {id: category.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> Show Category
        </a>
    </div>

    <div class="section actions">
        {{ include('admin/category/_delete_form.html.twig', {category: category}, with_context = false) }}
    </div>

    {{ parent() }}


{% endblock %}
